<div class="mdl-grid">
  <div class=" mdl-cell mdl-cell--4-col"></div>
	<div class="mdl-card mdl-shadow--6dp mdl-cell mdl-cell--4-col">
		<div class="mdl-card__title mdl-color--primary mdl-color-text--white">
			<h2 class="mdl-card__title-text">Profile</h2>
		</div>
  	<div class="mdl-card__supporting-text">
      <div class="mdl-textfield mdl-js-textfield field">
        <p>First name</p>
        <strong><%= @user.profile.first_name %></strong>
      </div>
      <div class="mdl-textfield mdl-js-textfield field">
        <p>Last name</p>
        <strong><%= @user.profile.last_name %></strong>
      </div>
      <div class="mdl-textfield mdl-js-textfield field">
        <p>Contact Email</p>
        <strong><%= @user.profile.contact_email %></strong>
      </div>
      <div class="mdl-textfield mdl-js-textfield field">
        <p>Description</p>
        <strong><%= @user.profile.description %></strong>
      </div>
      <br>
    </div>
    <div class="mdl-card__actions mdl-card--border actions">
      <%=link_to "Edit Your Profile", edit_user_profile_path(user_id: current_user.id), class: 'mdl-button mdl-js-button mdl-button--raised  mdl-button--accent' %>
    </div>
	</div>
  <div class=" mdl-cell mdl-cell--4-col"></div>
</div>
