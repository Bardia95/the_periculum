

<div class="homepage">

  <h1><%= @book.title %></h1>

  <%= link_to 'New chapter', new_book_chapter_path(@book, @chapter) %>

<div class="mdl-grid homepage">


  <% @book.chapters.each do |chapter| %>
      <div class="mdl-cell mdl-cell--4-col demo-card-square mdl-card mdl-shadow--2dp mdl-cell--2-col-phone">
        <div class="mdl-card__title mdl-card--expand" style="background-color:#673AB7">
          <h2 class="mdl-card__title-text"><%= chapter.title%> </h2>
          </div>
          <div class="mdl-card__supporting-text">
            <%= chapter.text %>
          </div>
            <div class="mdl-card__actions mdl-card--border">
              <%=link_to 'View Chapter', book_chapter_path(@book,chapter), class: "mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect"%>
          </div>
      </div>
    <% end %>
  </div>



<p>
  <% if current_user && current_user.role == 'admin' %>
    <%= link_to 'Edit', edit_book_path(@book) %> |
    <%= link_to 'Destroy', book_path(@book),
          method: :delete,
          data: { confirm: 'Are you sure?' } %> |
  <% end %>

</p>

</div>
<%= link_to 'Back', books_path %>
