<div class="homepage">

<h1>Book Club</h1>


<div class="mdl-grid homepage">
<% @books.each do |book| %>
<div class="mdl-cell mdl-cell--4-col demo-card-square mdl-card mdl-shadow--2dp mdl-cell--2-col-phone">
  <div class="mdl-card__title mdl-card--expand" style="background-color:#673AB7">
    <h2 class="mdl-card__title-text"><%= book.title%> </h2>
      </div>
      <div class="mdl-card__supporting-text">
          <%= book.text %>
        </div>
        <div class="mdl-card__actions mdl-card--border">
          <%=link_to 'View book',book_path(book), class: "mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect"%>
        </div>
      </div>
<% end %>
</div>

<% if current_user && current_user.role == 'admin' %>

  <% @books.each do |book| %>
    <%= link_to 'Edit', edit_book_path(book) %> |
    <%= link_to 'Destroy', book_path(book),
              method: :delete,
              data: { confirm: 'Are you sure?' } %>
  <% end %>
  <%= link_to "New", new_book_path%>
<% end %>

<br><br><br><br><br>

</div>
