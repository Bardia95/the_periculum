<div class="homepage">
  <div class="mdl-grid">
    <div class="mdl-layout-spacer"></div>
    <div class="mdl-cell mdl-cell--4-col"><h3>Mental Models</h3></div>
    <div class="mdl-layout-spacer"></div>
  </div>
  <div class="mdl-grid homepage">
    <% @models.each do |model| %>
      <div class="mdl-cell mdl-cell--4-col demo-card-square mdl-card mdl-shadow--2dp mdl-cell--2-col-phone">
        <div class="mdl-card__title mdl-card--expand" style="background-color:#651FFF">
          <h2 class="mdl-card__title-text"><%= model.name%> </h2>
        </div>
        <div class="mdl-card__actions mdl-card--border">
          <%=link_to 'View model',model_path(model), class: "mdl-button mdl-button--colored mdl-js-button"%>
        </div>
      </div>
    <% end %>
  </div>
  <% if current_user && current_user.role == 'admin' %>
  <% @models.each do |model| %>
    <%= link_to 'Edit', edit_mental_model_path(model) %> |
    <%= link_to 'Destroy', mental_model_path(model),
              method: :delete,
              data: { confirm: 'Are you sure?' } %>
    <% end %>
    <%= link_to "New", new_mental_model_path%>
  <% end %>
  <br><br><br><br><br>
</div>
<i class="material-icons"><%= link_to 'back', root_path, class: "mdl-button mdl-js-button mdl-button--mini-fab  mdl-button--accent" %></i>