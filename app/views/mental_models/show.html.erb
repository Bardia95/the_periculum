<div class="homepage">
  <div class="mdl-grid">
    <div class="mdl-layout-spacer"></div>
    <div class="mdl-cell mdl-cell--4-col">  <h3><%= @model.name %></h3></div>
    <div class="mdl-layout-spacer"></div>
  </div>
<div class="mdl-grid homepage">
  <div class="mdl-grid">
    <div class="mdl-cell mdl-cell--4-col">  <h3><%= @model.description %></h3></div>
  </div>
  <p>
    <% if current_user && current_user.role == 'admin' %>
      <%= link_to 'Edit', edit_mental_model_path(@model) %> |
      <%= link_to 'Destroy', mental_model_path(@model),
            method: :delete,
            data: { confirm: 'Are you sure?' } %> |
    <% end %>
  </p>
</div>
<i class="material-icons"><%= link_to 'back', mental_models_path, class: "mdl-button mdl-js-button mdl-button--mini-fab  mdl-button--accent" %></i>