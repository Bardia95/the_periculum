<%= render 'pages/navheader' %>

<div class="container">


<h1>Sections</h1>

<%= link_to 'New section', new_section_path %>

<table>
  <tr>
    <th>Title</th>
    <th>Text</th>
  </tr>

  <% @sections.each do |section| %>
  <tr>
    <td><%=section.title%></td>
    <td><%=section.text.html_safe%></td>
    <td><%=link_to 'Show',section_path(section)%></td>
    <td><%= link_to 'Edit', edit_section_path(section) %></td>
    <td><%= link_to 'Destroy', section_path(section),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
  </tr>
  <%end%>

</div>
