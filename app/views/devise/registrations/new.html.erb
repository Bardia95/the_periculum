<div class="mdl-grid">
  <div class=" mdl-cell mdl-cell--4-col"></div>
		<div class="mdl-card mdl-shadow--6dp mdl-cell mdl-cell--4-col">
			<div class="mdl-card__title mdl-color--primary mdl-color-text--white">
				<h2 class="mdl-card__title-text">Join Us</h2>
			</div>
	  	<div class="mdl-card__supporting-text">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= devise_error_messages! %>
        <div class="mdl-textfield mdl-js-textfield field">
            <p>Email</p>
            <%= f.email_field :email, autofocus: true, class: 'mdl-textfield__input', placeholder: 'elonmusk@boringcompany.com' %>
          </div>
					<div class="mdl-textfield mdl-js-textfield field">
            <p>Password</p>
            <% if @minimum_password_length %>
            <small>(<%= @minimum_password_length %> characters min.)</small>
            <% end %>
            <%= f.password_field :password, autocomplete: "off", class: 'mdl-textfield__input' %>
					</div>
          <div class="mdl-textfield mdl-js-textfield field">
            <p>Confim Password</p>
            <%= f.password_field :password_confirmation, autocomplete: "off", class: 'mdl-textfield__input' %>
          </div>
          <div class="mdl-card__actions mdl-card--border actions">
              <%= f.submit "Sign up", class: 'signupform mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect mdl-button--accent' %>
          </div>
          <% end %>
        </div>
			</div>
      <div class=" mdl-cell mdl-cell--4-col"></div>
    </div>
