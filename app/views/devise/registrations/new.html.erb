<%= render 'pages/navheader' %>

<div class="container">
  <div class="row">
    <div class="col-md-4 col-md-offset-4">
      <div class="text-center">
        <h2>Join Us</h2>
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= devise_error_messages! %>
          <div class="form-group signupform">
            <%= f.label :email, class: 'signupform' %>
            <%= f.email_field :email, autofocus: true, class: 'form-control', placeholder: 'elonmusk@boringcompany.com' %>
          </div>
          <div class="form-group signupform">
            <%= f.label :password, class: 'signupform' %>
            <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> characters min.)</em>
            <% end %>
            <%= f.password_field :password, autocomplete: "off", class: 'form-control' %>
          </div>
          <div class="form-group signupform">
            <%= f.label :password_confirmation, class: 'signupform' %>
            <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control' %>
          </div>
          <div class="actions form-group signupform">
            <%= f.submit "Sign up", class: 'btn btn-success signupform' %>
          </div>
        <% end %>
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
