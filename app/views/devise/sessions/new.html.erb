<div class="mdl-grid">
  <div class="mdl-cell mdl-cell--4-col"><h3>Log In</h3>
</div>
</div>
  <div class="mdl-grid">
    <div class="mdl-cell mdl-cell--4-col"></div>
    <div class="mdl-cell mdl-cell--4-col">
      <div class="mdl-textfield mdl-js-textfield">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="field ">
          <p>Email</p>
          <%= f.email_field :email, autofocus: true, class: 'mdl-textfield__input', placeholder: 'elonmusk@boringcompany.com' %>
        </div>
        <br>
        <p>Password</p>
        <div class="field ">
          <%= f.password_field :password, autocomplete: "off", class: 'mdl-textfield__input' %>
        </div>
        <% if devise_mapping.rememberable? -%>
          <div class="field">
            <%= f.check_box :remember_me, class:"mdl-checkbox__input"%>
            <span class="mdl-checkbox__label"><%= f.label :remember_me, class: 'mdl-checkbox__label'  %></span>
          </div>
        <% end -%>
        <div class="actions">
          <br>
          <br><br>
          <%= f.submit "Log in", class: 'signupform mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect mdl-button--colored' %>
        </div>
      <% end %>
      </div>
<div class="mdl-cell mdl-cell--4-col"></div>
</div>
