<div class="mdl-grid">
  <div class=" mdl-cell mdl-cell--4-col"></div>
		<div class="mdl-card mdl-shadow--6dp mdl-cell mdl-cell--4-col">
			<div class="mdl-card__title mdl-color--primary mdl-color-text--white">
				<h2 class="mdl-card__title-text">Log In</h2>
			</div>
	  	<div class="mdl-card__supporting-text">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <%= devise_error_messages! %>
        <div class="mdl-textfield mdl-js-textfield field">
            <p>Email</p>
            <%= f.email_field :email, autofocus: true, class: 'mdl-textfield__input', placeholder: 'elonmusk@boringcompany.com' %>
          </div>
					<div class="mdl-textfield mdl-js-textfield field">
            <p>Password</p>
            <%= f.password_field :password, autocomplete: "off", class: 'mdl-textfield__input' %>
					</div>
          <% if devise_mapping.rememberable? -%>
            <div class="field">
              <%= f.check_box :remember_me, class:"mdl-checkbox__input"%>
              <span class="mdl-checkbox__label"><%= f.label :remember_me, class: 'mdl-checkbox__label'  %></span>
            </div>
          <% end -%>
          <div class="mdl-card__actions mdl-card--border actions">
            <%= f.submit "Log in", class: 'signupform mdl-button mdl-js-button mdl-button--raised  mdl-button--colored'%>
          </div>
        <% end %>
        </div>
			</div>
      <div class=" mdl-cell mdl-cell--4-col"></div>
    </div>
