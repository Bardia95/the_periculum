<%= render 'pages/navheader' %>

<div class="container">
  <div class="row">
    <div class="col-md-4 col-md-offset-4">
      <div class="text-center">
        <h2>Log in</h2>
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="form-group signupform">
            <%= f.label :email, class: 'signupform' %>
            <%= f.email_field :email, autofocus: true, class: 'form-control' %>
          </div>
          <div class="form-group signupform">
            <%= f.label :password, class: 'signupform'  %>
            <%= f.password_field :password, autocomplete: "off", class: 'form-control' %>
          </div>
          <% if devise_mapping.rememberable? -%>
            <div class="form-group signupform">
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me, class: 'signupform'  %>
            </div>
          <% end -%>
          <div class="actions form-group signupform">
            <%= f.submit "Log in", class: 'btn btn-success signupform' %>
          </div>
        <% end %>
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
